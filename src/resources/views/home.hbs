<div class="mt-4">
    <div class="row">

        {{#each courses}}
        <div class="col-sm-6 col-lg-4">
            <div class="card mt-3">
                <a href="/courses/{{slug}}">
                    <img class="card-img-top" src="{{image}}" alt="{{name}}">
                </a>
                <div class="card-body">
                    <a href="/courses/{{slug}}">
                        <h5 class="card-title">{{ name }}</h5>
                    </a>
                    <p class="card-text">{{ description }}</p>
                    <a href="#" class="btn btn-primary">Hoc Ngay</a>
                </div>
            </div>
        </div>
        {{/each}}

    </div>
</div>